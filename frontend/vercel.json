{
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/images/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": {
    "afterFiles": [
      { "source": "/sitemap.xml", "destination": "/sitemap.xml" },
      { "source": "/robots.txt", "destination": "/robots.txt" }
    ],
    "fallback": [
      { "source": "/:path*", "destination": "/index.html" }
    ]
  }
}
